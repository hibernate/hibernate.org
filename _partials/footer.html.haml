          %a.item{:href => "#{relative("/others/", real_page)}", :title => "Other projects"} Other projects
      .three.wide.column
        %h4.ui.inverted.header Follow us
        .ui.inverted.link.list
          %a.item{:href => "http://in.relation.to", :title => "Blog"} Blog
          %a.item{:href => "https://twitter.com/hibernate/", :title => "Twitter"} Twitter
          %a.item{:href => "https://plus.google.com/112681342290762837955/posts", :title => "Google+"} Google+
